datasource db {
  provider="postgresql"
  url=env("NEXT_PUBLIC_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  label    String   @db.VarChar(255)
  done Boolean  @default(false)
}